<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/imgBar"
    >

    <LinearLayout
        android:id="@+id/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

        <ImageView

            android:id="@+id/title_bar_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrowsleft"/>

        <TextView
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:text="11"
            android:id="@+id/title_bar_tv"
            android:layout_toRightOf="@+id/title_bar_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>

        <ImageView
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search_close"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:id="@+id/title_refsh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search_ref"
             />

    </LinearLayout>

</RelativeLayout>